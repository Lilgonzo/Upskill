<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<server description="Public API WSL">

    <!-- Enable features -->
    <!--The Liberty Gradle Plugin has generated Liberty features necessary for your application in configDropins/overrides/generated-features.xml-->
    <featureManager>
        <feature>webProfile-9.1</feature>
    </featureManager>

    <remoteFileAccess>
        <writeDir>${server.config.dir}</writeDir>
    </remoteFileAccess>

    <!-- To access this server from a remote client add a host attribute to the following element, e.g. host="*" -->
    <httpEndpoint host="*" httpPort="9080" httpsPort="9443" id="defaultHttpEndpoint"/>

    <!--  Automatically expand WAR files and EAR files  -->
    <applicationManager autoExpand="true"/>

    <server>
        <webApplication id="Upskill" location="Upskill.war" name="Upskill"/>
    </server>
</server>